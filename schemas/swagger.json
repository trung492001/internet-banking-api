          "403": {
            "description": "Do not have permission to access the API",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          },
          "409": {
            "description": "User already exist",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          },
          "500": {
            "description": "Internal server error!",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Update user account information. Must be login as User role to access this API",
        "parameters": [
          {
            "name": "x-access-token",
            "in": "header",
            "description": "Provide the access token to access the API",
            "required": true
          },
          {
            "name": "Request Body",
            "in": "body",
            "description": "Provide the user information to be updated",
            "required": true,
            "schema": {
              "properties": {
                "username": {
                  "type": "string"
