    "/Accounts/DepositAccount": {
      "post": {
        "tags": [
          "Accounts"
        ],
        "summary": "Deposit money to an account. Only Employee role can access this API",
        "parameters": [
          {
            "name": "x-access-token",
            "in": "header",
            "description": "Provide the access token to access the API",
            "required": true
          },
          {
            "name": "Request Body",
            "in": "body",
            "description": "Provide the information to deposit money to an account",
            "required": true,
            "schema": {
              "properties": {
                "username": {
                  "type": "string"
                },
                "account_number": {
                  "type": "string"
                },
                "balance": {
                  "type": "number"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deposited money to an account",
            "schema": {
              "$ref": "#/definitions/account"
            }
          },
          "204": {
            "description": "Can't find the account to deposit money",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          },
          "403": {
            "description": "Do not have permission to access the API",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          },
          "500": {
            "description": "Internal server error!",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          }
        }
      }
    },
