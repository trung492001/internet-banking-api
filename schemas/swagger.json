          "403": {
            "description": "Do not have permission to access the API",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          },
          "500": {
            "description": "Internal server error!",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          }
        }
      }
